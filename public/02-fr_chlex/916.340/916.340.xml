          <structureKind>N</structureKind>
          <structureLevel>1</structureLevel>
          <structureContents ID="5078">
            <structureContent lang="de">
              <structureOrder>6</structureOrder>
              <structureText>Verschiedenes</structureText>
            </structureContent>
            <structureContent lang="fr">
              <structureOrder>6</structureOrder>
              <structureText>Divers</structureText>
            </structureContent>
          </structureContents>
          <normTexts>
            <article>
              <articleMetadata ID="Article:16659">
                <articleForm>Art.</articleForm>
                <articleNumber>
                  <number>14</number>
                </articleNumber>
                <articleHeaders>
                  <articleHeader>
                    <mixedText lang="de">Labor</mixedText>
                  </articleHeader>
                  <articleHeader>
                    <mixedText lang="fr">Laboratoire</mixedText>
                  </articleHeader>
                </articleHeaders>
              </articleMetadata>
              <articleBody>
                <articleText>
                  <partMetadata ID="Paragraph:37992">
                    <partNumber>1</partNumber>
                    <typeOfPart>A</typeOfPart>
                  </partMetadata>
                  <partTexts>
                    <partText>
                      <mixedText lang="de">Der Kantonstierarzt bestimmt das Labor, das die im Rahmen der Fleischkontrolle entnommenen Proben analysiert.</mixedText>
                    </partText>
                    <partText>
                      <mixedText lang="fr">Le v&#xE9;t&#xE9;rinaire cantonal d&#xE9;signe le laboratoire charg&#xE9; des analyses des &#xE9;chantillons pr&#xE9;lev&#xE9;s dans le cadre du contr&#xF4;le des viandes.</mixedText>
                    </partText>
                  </partTexts>
                </articleText>
              </articleBody>
            </article>
          </normTexts>
        </structure>
