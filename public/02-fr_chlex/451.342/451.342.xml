                    <partText>
                      <mixedText lang="fr">La Meina;</mixedText>
                    </partText>
                  </partTexts>
                </articleText>
                <articleText>
                  <partMetadata ID="EnumerationItem:22673">
                    <partNumber>f)</partNumber>
