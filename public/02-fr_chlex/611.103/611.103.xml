            <structureContent lang="de">
              <structureOrder>3</structureOrder>
              <structureText>Inkassoverfahren und andere Angelegenheiten</structureText>
            </structureContent>
            <structureContent lang="fr">
              <structureOrder>3</structureOrder>
              <structureText>Proc&#xE9;dures d'encaissement et autres affaires</structureText>
            </structureContent>
