    <shortTitles>
      <title lang="de">Ausf&#xFC;hrungsreglement zum Bundesgesetz &#xFC;ber die Luftfahrt</title>
      <title lang="fr">R&#xE8;glement d'ex&#xE9;cution de la loi f&#xE9;d&#xE9;rale sur la navigation a&#xE9;rienne</title>
    </shortTitles>
    <type>R&#xE8;glement</type>
    <authors>
      <author>
        <canton short="VS">
          <designations>
            <designation lang="de">Der Staatsrat des Kantons Wallis</designation>
          </designations>
        </canton>
      </author>
    </authors>
    <dates>
      <dateAdoption>1951-02-13</dateAdoption>
      <dateForce>1951-06-01T00:00:00</dateForce>
      <dateLastChange>1951-06-01</dateLastChange>
      <dateVersion>1951-06-01</dateVersion>
