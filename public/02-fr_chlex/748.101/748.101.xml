      <structureContents ID="1301">
        <structureContent lang="de">
          <structureText>Verordnung<break type="line"/>&#xFC;ber die Aufhebung der Sicherungsbeschlagnahme von Luftfahrzeugen</structureText>
        </structureContent>
        <structureContent lang="fr">
          <structureText>Ordonnance<break type="line"/>sur la demande en mainlev&#xE9;e de la saisie conservatoire d'un a&#xE9;ronef</structureText>
        </structureContent>
      </structureContents>
      <normTexts>
        <article>
          <articleMetadata ID="Article:4174">
            <articleForm>Art.</articleForm>
            <articleNumber>
              <number>1</number>
            </articleNumber>
            <articleHeaders>
              <articleHeader>
                <mixedText lang="de"/>
              </articleHeader>
              <articleHeader>
                <mixedText lang="fr"/>
              </articleHeader>
            </articleHeaders>
          </articleMetadata>
          <articleBody>
            <articleText>
              <partMetadata ID="Paragraph:9592">
                <partNumber>1</partNumber>
                <typeOfPart>A</typeOfPart>
              </partMetadata>
              <partTexts>
                <partText>
                  <mixedText lang="de">&#xDC;ber die Aufhebung der Sicherungsbeschlagnahme eines Luftfahrzeuges entscheidet der Instruktionsrichter des Ortes, wo dieses beschlagnahmt worden ist.</mixedText>
                </partText>
                <partText>
                  <mixedText lang="fr">La mainlev&#xE9;e de la saisie conservatoire d'un a&#xE9;ronef est du ressort du juge instructeur du lieu de la saisie.</mixedText>
                </partText>
              </partTexts>
            </articleText>
          </articleBody>
        </article>
        <article>
          <articleMetadata ID="Article:4175">
            <articleForm>Art.</articleForm>
            <articleNumber>
              <number>2</number>
            </articleNumber>
            <articleHeaders>
              <articleHeader>
                <mixedText lang="de"/>
              </articleHeader>
              <articleHeader>
                <mixedText lang="fr"/>
              </articleHeader>
            </articleHeaders>
          </articleMetadata>
          <articleBody>
            <articleText>
              <partMetadata ID="Paragraph:9593">
                <partNumber>1</partNumber>
                <typeOfPart>A</typeOfPart>
              </partMetadata>
              <partTexts>
                <partText>
                  <mixedText lang="de">Die Schweizerische Zivilprozessordnung ist anwendbar.</mixedText>
                </partText>
                <partText>
                  <mixedText lang="fr">Le code de proc&#xE9;dure civile suisse est applicable.</mixedText>
                </partText>
              </partTexts>
            </articleText>
          </articleBody>
        </article>
        <article>
          <articleMetadata ID="Article:4176">
            <articleForm>Art.</articleForm>
            <articleNumber>
              <number>3</number>
            </articleNumber>
            <articleHeaders>
              <articleHeader>
                <mixedText lang="de"/>
              </articleHeader>
              <articleHeader>
                <mixedText lang="fr"/>
              </articleHeader>
            </articleHeaders>
          </articleMetadata>
          <articleBody>
            <articleText>
              <partMetadata ID="Paragraph:9594">
                <partNumber>1</partNumber>
                <typeOfPart>A</typeOfPart>
              </partMetadata>
              <partTexts>
                <partText>
                  <mixedText lang="de">Gegen den Entscheid des Instruktionsrichters ist die Berufung an das Kantonsgericht zul&#xE4;ssig.</mixedText>
                </partText>
                <partText>
                  <mixedText lang="fr">La d&#xE9;cision du juge instructeur est susceptible de recours au Tribunal cantonal.</mixedText>
                </partText>
              </partTexts>
            </articleText>
          </articleBody>
        </article>
        <article>
          <articleMetadata ID="Article:4177">
            <articleForm>Art.</articleForm>
            <articleNumber>
              <number>4</number>
            </articleNumber>
            <articleHeaders>
              <articleHeader>
                <mixedText lang="de"/>
              </articleHeader>
              <articleHeader>
                <mixedText lang="fr"/>
              </articleHeader>
            </articleHeaders>
          </articleMetadata>
          <articleBody>
            <articleText>
              <partMetadata ID="Paragraph:9595">
                <partNumber>1</partNumber>
                <typeOfPart>A</typeOfPart>
              </partMetadata>
              <partTexts>
                <partText>
                  <mixedText lang="de">Diese Verordnung tritt nach der Genehmigung durch den Bundesrat sofort in Kraft.</mixedText>
                </partText>
                <partText>
                  <mixedText lang="fr">La pr&#xE9;sente ordonnance entre en vigueur imm&#xE9;diatement apr&#xE8;s son approbation par le Conseil f&#xE9;d&#xE9;ral.</mixedText>
                </partText>
              </partTexts>
            </articleText>
          </articleBody>
        </article>
