        </structureContent>
      </structureContents>
      <normTexts>
        <article>
          <articleMetadata ID="Article:5893">
            <articleForm>Art.</articleForm>
            <articleNumber>
              <number>1</number>
            </articleNumber>
            <articleHeaders>
              <articleHeader>
                <mixedText lang="de"/>
              </articleHeader>
